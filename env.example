# The user name on https://hub.docker.com , where the container images are stored.
# Replace the name if you use your containers.
USERNAME=advu

# Reddit application
REDDIT_UI_VERSION=0.0.3
REDDIT_PORT=9292

# Commit service
REDDIT_COMMENT_VERSION=0.0.4

# Post service
REDDIT_POST_VERSION=0.0.3

# MondoDB
REDDIT_MONGO_VERSION=3.2

# Prometheus configuration
REDDIT_PROMETHEUS_VERSION=0.0.5
REDDIT_PROMETHEUS_PORT=9090

# cAdvisor configuration
REDDIT_CADVISOR_PORT=8080

